@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="login-register-container">
    <form id="account" method="post">
        <h2>Login</h2>
        <div asp-validation-summary="ModelOnly" role="alert" class="text-validation"></div>
        <div>
            <input type="text" asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="Email" />
            <span asp-validation-for="Input.Email" class="text-validation"></span>
        </div>
        <div>
            <input type="password" asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-validation"></span>
        </div>
        <div>
            <label asp-for="Input.RememberMe">
                <input type="checkbox" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
        <div>
            <button id="login-submit" type="submit">Log in</button>
        </div>
        <div>


            <p>
                Don't Have an account?<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"> Register</a>
            </p>

        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
